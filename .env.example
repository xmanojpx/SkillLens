# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# API Keys (Required)
# ============================================

# OpenAI API Key (for GPT-3.5)
# Get free credits at: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API Key (for Sentence-BERT)
# Free tier at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# SerpAPI Key (for job market data)
# Limited free tier at: https://serpapi.com/
SERPAPI_KEY=your_serpapi_key_here

# ============================================
# Database Configuration
# ============================================

# PostgreSQL Database
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://skilllens:skilllens@localhost:5432/skilllens

# Neo4j Graph Database (Optional - for skill relationships)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=skilllens123

# ============================================
# Application Configuration
# ============================================

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# Service URLs
# ============================================

# Backend URL
BACKEND_URL=http://localhost:8000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# ============================================
# Model Configuration
# ============================================

# Sentence-BERT Model
SENTENCE_BERT_MODEL=sentence-transformers/all-MiniLM-L6-v2

# GPT Model
GPT_MODEL=gpt-3.5-turbo

# Temperature for GPT responses
GPT_TEMPERATURE=0.7

# ============================================
# Feature Flags
# ============================================

# Enable GitHub project analysis
ENABLE_GITHUB_ANALYSIS=false

# Enable job market intelligence
ENABLE_JOB_INTELLIGENCE=true

# Enable prediction engine
ENABLE_PREDICTIONS=true

# ============================================
# Development Settings
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
